{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "C:/Program Files/WinDevices"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows x64 Debug",
            "description": "Debug build for Windows with tests",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTS": "ON",
                "BUILD_E2E_TESTS": "ON",
                "BUILD_SHARED_LIBS": "OFF"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows x64 Release",
            "description": "Release build for Windows with tests",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTS": "ON",
                "BUILD_E2E_TESTS": "ON",
                "BUILD_SHARED_LIBS": "OFF"
            }
        },
        {
            "name": "windows-release-shared",
            "displayName": "Windows x64 Release (Shared Libraries)",
            "description": "Release build with shared libraries",
            "inherits": "windows-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTS": "ON",
                "BUILD_E2E_TESTS": "ON",
                "BUILD_SHARED_LIBS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug",
            "configuration": "Debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release",
            "configuration": "Release"
        },
        {
            "name": "windows-release-shared",
            "configurePreset": "windows-release-shared",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "windows-debug-tests",
            "configurePreset": "windows-debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "windows-release-tests",
            "configurePreset": "windows-release",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ]
}
